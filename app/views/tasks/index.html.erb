<div class="container w-50 d-flex flex-column align-items-center flex-nowrap">
  <h1 class="mt-3">Task Tracker</h1>
  <% @tasks.each do |task| %>
    <% checked = "" %>
    <% checked = "checked" if task.completed %>
    <div class="w-100 border shadow-sm m-1 p-2 d-flex flex-row flex-wrap-nowrap justify-content-between">
      <%= link_to toggle_path(task) do %>
          <input class="mx-2" type="checkbox" name="task" id="task" <%= checked %> >
      <% end %>
      <div>
        <%= task.title %>
      </div>
      <div>
        <%= link_to task_path(task) do %>
          <div class="btn btn-sm btn-primary">✍</div>
        <% end %>
        <%= link_to destroy_path(task) do %>
          <div class="btn btn-sm btn-danger">✕</div>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="m-1 d-flex justify-content-center">
      <%= link_to new_task_url do %>
        <div class="btn btn-sm btn-success shadow-sm">✚</div>
      <% end %>
  </div>
</div>
