
<% status = "Status: Not Complete" %>
<% status = "Status: Complete" if @task.completed %>
<div class="container w-50 d-flex flex-column flex-nowrap align-items-center mt-3">
  <div class="card shadow-sm" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <div class="card-header fw-bold fs-4">
        <%= @task.title %>
      </div>
      <li class="list-group-item"><%= "Notes: #{@task.details}" %></li>
      <li class="list-group-item"><%= status %></li>
    </ul>
  </div>

  <div class="d-flex flex-row flex-nowrap justify-content-between mx-5 w-75 mt-3">
    <%= link_to tasks_url do %>
      <button type="button" class="btn btn-primary shadow-sm">See All Tasks</button>
    <% end %>
    <div class=""></div>
    <%= link_to edit_path(@task) do %>
      <button type="button" class="btn btn-primary shadow-sm">Edit</button>
    <% end %>
  </div>

</div>
